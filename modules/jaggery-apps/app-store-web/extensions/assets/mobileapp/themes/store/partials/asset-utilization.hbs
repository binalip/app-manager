{{#with asset}}
    {{#attributes}}
        {{#if ../../inDashboard}}

            <a id="btn-add-gadget" class="btn btn-primary" href="#modal-add-gadget"
               data-toggle="modal"
               data-app="{{../../id}}"
               data-platform="{{../../attributes.overview_platform}}"
               data-aid="{{../../id}}" data-type="{{../../type}}"> {{t "Installed"}}</a>

            {{#if ../../../isEnterpriseInstallEnabled}}
                <a id="btn-ent-install" class="btn btn-primary" href="#modal-ent-install"
                   data-toggle="modal"
                   data-app="{{../../../id}}"
                   data-aid="{{../../../id}}"
                   data-platform="{{../../../attributes.overview_platform}}"
                   data-type="{{../../../type}}"> {{t "Ent. Install"}}</a>
            {{/if}}

        {{else}}

            {{#if ../../../sso}}
                {{#if ../../../../user.username}}
                    <a id="btn-add-gadget" class="btn btn-primary" href="#modal-add-gadget"
                       data-toggle="modal"
                       data-app="{{../../../../id}}"
                       data-aid="{{../../../../id}}"
                       data-platform="{{../../../../attributes.overview_platform}}"
                       data-type="{{../../../../type}}"> {{t "Install "}}</a>
                {{else}}
                    <a id="btn-add-gadget" class="btn btn-primary" href="{{url "/login"}}"
                       data-toggle="modal"
                        data-app="{{../../../../id}}"
                       data-aid="{{../../../../id}}"
                       data-platform="{{../../../../attributes.overview_platform}}"
                       data-type="{{../../../../type}}"> {{t "Install "}}</a>
                {{/if}}

                {{#if ../../../../isEnterpriseInstallEnabled}}
                    <a id="btn-ent-install" class="btn btn-primary" href="#modal-ent-install"
                       data-toggle="modal"
                       data-app="{{../../../../id}}"
                       data-aid="{{../../../../id}}"
                       data-platform="{{../../../../attributes.overview_platform}}"
                       data-type="{{../../../../type}}"> {{t "Ent. Install"}}</a>
                 {{/if}}

            {{else}}
                <a id="btn-add-gadget" class="btn btn-primary" href="#modal-add-gadget"
                   data-toggle="modal"
                   data-app="{{../../../../id}}"
                   data-platform="{{../../../../attributes.overview_platform}}"
                   data-aid="{{../../../id}}" data-type="{{../../../type}}"> {{t "Install"}}</a>
            {{/if}}



        {{/if}}
       
    {{/attributes}}
{{/with}}


