{{#each assets}}
    <h1 class="asset-type-default asset-title-separator asset-type-{{type}}">
        Recent {{plural}}
        <div class="pagination top-asset-slideshow-pag" id="top-asset-slideshow-pag-{{type}}"></div>
    </h1>
	<div class="assets-container">

		<div class="top-asset-slideshow-cont">
			<div class="html_carousel">
				<div id="top-asset-slideshow-{{type}}">
					{{#if assets}} 
					{{#each assets}} 
					{{#attributes}}
						<div class="slide asset" data-id="{{../id}}" data-type="{{../type}}" id="slideAsset">
							{{#if ../isSubscribed}}
                                <div class="ribbon-wrapper-green">
                                    <div class="ribbon-green">Subscribed</div>
                                </div>
							{{/if}}
							<a href="#">
								<div class="asset-icon" data-type="{{../type}}">
                                <input type="hidden"  value="{{overview_allowAnonymous}}" id="allowAnonymous" name="allowAnonymous">
								{{#if ../indashboard}} 
									<i class=""></i>
								{{/if}} 
								<a href="{{url "/assets"}}/{{../type}}/{{../id}}"><img src="{{#if images_thumbnail}}{{images_thumbnail}}{{/if}}"></a>
								</div>
							</a>

                            {{#compare "mobileapp" ../type}}

                                <div class="asset-details" data-type="{{../../type}}">
                                    <div class="asset-name">
                                        <input type="hidden"  value="{{../overview_allowAnonymous}}" id="allowAnonymous" name="allowAnonymous">
                                        <a href="{{url "/assets"}}/{{../../type}}/{{../../id}}"><h4>{{../overview_name}}</h4></a>
                                    </div>

                                    <div class="asset-rating">
                                        <div class="asset-rating-{{../../rating.average}}star"></div>
                                    </div>

                                </div>


                             {{else}}


                                <div class="asset-details" data-type="{{../../type}}">
                                    <div class="asset-name">
                                        <input type="hidden"  value="{{../overview_allowAnonymous}}" id="allowAnonymous" name="allowAnonymous">
                                        <a href="{{url "/assets"}}/{{../../type}}/{{../../id}}"><h4>{{../overview_displayName}}</h4></a>
                                    </div>
                                    <div class="asset-rating">
                                        <div class="asset-rating-{{../../rating}}star"></div>
                                    </div>

                                    {{#if ../../overview_skipGateway}}
                                        <style>.meta-gw-info {
                                            position: absolute;
                                            top: 25px;
                                            right: 5px;
                                            font-size: 10px;
                                            color: red;
                                        }</style>
                                        <div class="meta-gw-info"><i class="icon-remove"></i>Skipped Proxying</div>
                                    {{/if}}
                                    <div class="asset-author-category">
                                        <ul>
                                            <li>
                                                <h4>{{t "Category"}}</h4> <a class="asset-category" href="#">{{../../../singular}}</a>
                                            </li>
                                            <li>
                                                <h4>{{t "Author"}}</h4> <a class="asset-author" href="#">{{../overview_provider}}</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>


                            {{/compare}}
		

						</div>
					{{/attributes}} 
					{{/each}} 
					{{else}}
						<div class="top-assets-empty-assert">{{t "We couldn't find anything for you."}}</div>
					{{/if}}
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
	</div>
{{/each}}
